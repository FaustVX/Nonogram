{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "close": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Nonogram.CLI/Nonogram.CLI.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "close": true
            }
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/Nonogram.CLI/Nonogram.CLI.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run console",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/Nonogram.CLI/Nonogram.CLI.csproj",
                "${input:id}"
            ],
            "problemMatcher": []
        },
        {
            "label": "run WPF",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/Nonogram.WPF/Nonogram.WPF.csproj"
            ],
            "problemMatcher": []
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test"
            ],
            "options": {
                "env": {
                    "VSTEST_HOST_DEBUG": "${input:debugTest}"
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "id": "debugTest",
            "type": "pickString",
            "options": [
                {
                    "label": "Wait",
                    "value": "1"
                },
                {
                    "label": "Don't wait",
                    "value": "0"
                }
            ],
            "description": "Wait for debugger ?"
        },
        {
            "id": "id",
            "type": "promptString",
            "description": "WebPbn id"
        }
    ]
}