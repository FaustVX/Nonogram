{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/NonogramRow.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/NonogramRow.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/NonogramRow.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run"
            ],
            "problemMatcher": []
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test",
                "--configuration",
                "Test"
            ],
            "problemMatcher": []
        },
        {
            "label": "run tests for debug",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test",
                "--configuration",
                "Test"
            ],
            "options": {
                "env": {
                    "VSTEST_HOST_DEBUG": "1"
                }
            },
            "problemMatcher": []
        }
    ]
}